{
  "manifest_version": 2,
  "name": "__MSG_google_calendar_extension_name__",
  "description": "__MSG_google_calendar_extension_desc__",
  "version": "0.14",
  "default_locale": "en",

  "icons": {
    "16": "icons/event_calendar-lb16.png",
    "19": "icons/event_calendar-lb19.png",
    "32": "icons/event_calendar-lb32.png",
    "48": "icons/event_calendar-lb48.png",
    "128": "icons/event_calendar-lb128.png"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "http://www.google.com/calendar/*",
    "https://www.google.com/calendar/*"
  ],

  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",

  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "lib/moment.min.js",
      "common.js",
      "calendar_utils.js",
      "feeds.js",
      "scheduler.js",
      "background.js"
    ]
  },

  "browser_action": {
     "default_icon": "icons/event_calendar-lb19.png",
     "default_title": "__MSG_google_calendar_extension_name__",
     "default_popup": "browser_action.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "common.js",
        "calendar_utils.js",
        "calendar_event.js",
        "renderer.js",
        "events_microformats.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://www.evite.com/pages/invite/viewInvite.jsp?inviteId=*"
      ],
      "js": [
        "lib/jquery.min.js",
        "common.js",
        "calendar_utils.js",
        "calendar_event.js",
        "renderer.js",
        "events_evite.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    "icons/calendar_add_19.png"
  ]
}
